// Prisma schema: MySQL datasource, env-based URL.
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id           BigInt   @id
  username     String   @unique
  passwordHash String
  create_time  DateTime @default(now())
  update_time  DateTime @updatedAt

  @@map("user")
}

model LlmConfig {
  id          BigInt   @id
  user_id     BigInt
  name        String
  provider    String
  base_url    String
  model_id    String
  api_key_enc String   @db.VarChar(512)
  is_default  Boolean  @default(false)
  create_time DateTime @default(now())
  update_time DateTime @updatedAt

  @@unique([user_id, name])
  @@index([user_id])
  @@map("llm_config")
}

model Session {
  id            BigInt   @id
  user_id       BigInt
  llm_config_id BigInt?
  title         String?
  create_time   DateTime @default(now())
  update_time   DateTime @updatedAt

  @@map("session")
}

model Message {
  id          BigInt   @id
  session_id  BigInt
  role        String
  parts       Json
  metadata    String?  @db.Text
  create_time DateTime @default(now())
  update_time DateTime @updatedAt

  @@map("message")
}
