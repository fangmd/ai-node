// Prisma schema: MySQL datasource, env-based URL.
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id           BigInt   @id
  username     String   @unique
  passwordHash String
  create_time  DateTime @default(now())
  update_time  DateTime @updatedAt

  @@map("user")
}

model Session {
  id          BigInt   @id
  user_id     BigInt
  title       String?
  create_time DateTime @default(now())
  update_time DateTime @updatedAt

  @@map("session")
}

model Message {
  id          BigInt   @id
  session_id  BigInt
  role        String
  parts       Json
  create_time DateTime @default(now())
  update_time DateTime @updatedAt

  @@map("message")
}
